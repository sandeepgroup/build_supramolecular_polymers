#!/usr/bin/env python3
# it requires two environment variables
# 1. dftb+ should be on the path, otherwise set the path
#      export ASE_DFTB_COMMAND="/path/to/dftb+ > PREFIX.out"
# 2. SK files: 
#      export DFTB_PREFIX=/path/to/mio-0-1/


import os
import sys
import re
import glob

from ase.calculators.dftb import Dftb
from ase.io import read
from ase import Atoms, Atom


print(" Log: Using the ", glob.glob("traj*.xyz"), "as the input file for this script")

filename=glob.glob("traj*.xyz")[0]
output="extended_"+filename+".xyz"
#clean up output files present in the current working directory
os.system("rm -f "+ output)

mol=read(filename,index=':')

for k in range(len(mol)):
  natoms=len(mol[k].numbers)

  atoms = Atoms(mol[k].symbols,positions=mol[k].positions) 
  calc = Dftb(atoms=atoms,
            Hamiltonian_SCC='Yes',
            Hamiltonian_SCCTolerance=1e-5,
            Hamiltonian_MaxAngularMomentum_='',
            Hamiltonian_MaxAngularMomentum_C='p',
            Hamiltonian_MaxAngularMomentum_H='s',
            Hamiltonian_MaxAngularMomentum_N='p',
            Hamiltonian_MaxAngularMomentum_O='p',
            include_dispersion=True
            )

  atoms.calc = calc
  potential_en = atoms.get_potential_energy()

  print("Energy: "+ str(potential_en))

# clean dftb+ files
  os.system("rm -f dftb.out detailed.out band.out dftb* geo_end.gen charges.bin results.tag")

# write this tetramer configuration along with its energy 
  with open(output,'a+') as fp:
    fp.write(str(natoms)+"\n")
    fp.write(str(potential_en)+"\n")

    for i in range(natoms):
      fp.write(mol[k].symbols[i]+" ")

      for j in range(len(mol[k].positions[i])):
        fp.write(str(mol[k].positions[i][j])+" ")
      fp.write("\n")

